<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="47dp">

    <TextView
        android:id="@+id/textView_subFeedDetail_replyUser"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13.5dp"
        android:text="강의정"
        android:textColor="#676767"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_subFeedDetail_replyTaggedUser"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15.5dp"
        android:text="김주은"
        android:textColor="#ed7d5d"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/textView_subFeedDetail_replyUser"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_subFeedDetail_replyContent"
        android:layout_width="210dp"
        android:layout_height="16dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15.5dp"
        android:gravity="center_vertical"
        android:text="이거 철길에 있는거임?"
        android:textColor="#676767"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/textView_subFeedDetail_replyTaggedUser"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>