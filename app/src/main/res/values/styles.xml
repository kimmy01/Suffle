<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="customRatingBar" parent="android:Widget.RatingBar">
        <item name="colorControlNormal">#707070</item>
        <item name="colorControlActivated">#ed7d5d</item>
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">15dp</item>
    </style>

    <style name="dialogLayout" parent="Theme.AppCompat">
        <item name="android:radius">20dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="verticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">?android:attr/verticalDivider</item>
    </style>

</resources>