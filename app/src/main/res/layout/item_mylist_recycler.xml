<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_myListItem"
        android:layout_width="315dp"
        android:layout_height="114dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        app:cardElevation="4dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_myListItem"
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/imageview_rounding"
                android:src="@drawable/image1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_myListItem_placeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="127dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="7sp"
                android:textColor="#ed7d5d"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="라라브레드" />

            <TextView
                android:id="@+id/textView_myListItem_subwayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/cool_grey"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/textView_myListItem_placeName"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="화랑대역" />

            <TextView
                android:id="@+id/button_myListItem_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="127dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/button_notice_delete"
                android:gravity="center"
                android:lineSpacingExtra="4sp"
                android:padding="5dp"
                android:textColor="#676767"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="인스타에서 핫한" />

            <TextView
                android:id="@+id/button_myListItem_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/button_notice_delete"
                android:gravity="center"
                android:lineSpacingExtra="4sp"
                android:padding="5dp"
                android:textColor="#676767"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_myListItem_1"
                tools:text="카페" />

            <TextView
                android:id="@+id/button_myListItem_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/button_notice_delete"
                android:gravity="center"
                android:lineSpacingExtra="4sp"
                android:padding="5dp"
                android:textColor="#676767"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_myListItem_2"
                tools:text="한식" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>