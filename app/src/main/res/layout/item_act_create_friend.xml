<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/item_act_create_friend_img"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/kakao_friend_sample"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_act_create_friend_txt_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="7sp"
        android:text="멍뭉이"
        android:textColor="@color/brownish_grey"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_act_create_friend_img"
        app:layout_constraintStart_toEndOf="@+id/item_act_create_friend_img"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_act_create_friend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_bg_round_faded_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4sp"
        android:text="친구 요청"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_act_create_friend_btn"
        app:layout_constraintEnd_toEndOf="@+id/item_act_create_friend_btn"
        app:layout_constraintStart_toStartOf="@+id/item_act_create_friend_btn"
        app:layout_constraintTop_toTopOf="@+id/item_act_create_friend_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>